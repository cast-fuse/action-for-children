      </iframe>
    </noscript>

    <!-- End Google Tag Manager (noscript) -->
    
    <div class="w-100 bg-blue">
      <div class="flex center mw8 justify-center">
        <p class="white alert-banner f6-ns f7 tc" style="line-height: 1.6;">
          We'd appreciate your <%= link "feedback", to: page_path(@conn, :feedback), class: "white" %> on our service - it will take less than 5 minutes.
        </p>
      </div>
    </div>

    <div class="mw8 center flex justify-between items-center">
      <div class="mh2 mh4-ns pv5-ns pv4" style="width: 350px">
        <a href="<%= page_path(@conn, :index) %>">
          <img src="/images/afc-logo.png" class="w-40 db" />
        </a>
      </div>
      <%= unless (@conn.assigns[:user] || @conn.request_path == "/talk-to-us") do %>
      <a
        href="/talk-to-us"
        class="db white bg-dark-red mh4-ns mh2 f3-ns f5 fw4 pv2 ph3 br2 hover-bg-red t3 all ease no-underline tc"
        >Speak to us</a
      >
      <% end %>
    </div>

    <main role="main">
      <%= render @view_module, @view_template, assigns %>
    </main>

    <div
      class="w-100 bg-blue flex justify-center b--white bt absolute bottom-0 footer"
    >
      <div class="flex flex-column ph3 pv4 pa4-ns mw8 mb4">
        <div class="w-70-l tc tl-ns">
          <h4 class="white fw4 tracked lh-copy">
            Contact your local council if you are worried about a child's
            welfare. Contact 111 if you are worried about your child's health,
            or 999 in a medical emergency.
          </h4>
          <%= if @conn.assigns[:user] do %>
          <div class="logout-form">
            <p class="white">
              You are logged in as <strong><%= @conn.assigns.user.email %></strong> â€“
            </p>
            <%= link "Logout", to: session_path(@conn, :delete), class: "white"
            %>
            <br /><br />
          </div>
          <% end %>
          <%= link to: page_path(@conn, :privacy), class: "white" do %>
            Privacy Policy
          <% end %>
        </div>
      </div>
    </div>

    <!-- intercom  -->
